{
  "name": "gulp-template",
  "description": "Modern Gulp template for fast frontend development",
  "version": "2.1.0",
  "type": "module",
  "main": "gulpfile.js",
  "author": "HolyMolly",
  "license": "MIT",
  "packageManager": "pnpm@10.26.2",
  "scripts": {
    "start": "cross-env NODE_OPTIONS=--no-deprecation NODE_ENV=development gulp start",
    "build:dev": "cross-env NODE_OPTIONS=--no-deprecation NODE_ENV=development gulp build:dev",
    "build:prod": "cross-env NODE_OPTIONS=--no-deprecation NODE_ENV=production gulp build:prod",
    "lint": "eslint . --fix && stylelint \"src/**/*.{css,scss}\" --fix",
    "format": "prettier --write .",
    "tailwind:setup": "node .template/setup/tailwind/setup.js",
    "clean": "rm -rf dist",
    "clean:cache": "rm -rf node_modules/.cache .eslintcache .stylelintcache",
    "clean:all": "rm -rf node_modules dist"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "autoprefixer": "^10.4.21",
    "browser-sync": "^2.27.11",
    "cross-env": "^10.1.0",
    "dotenv": "^16.4.7",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^17.2.0",
    "gulp": "^4.0.2",
    "gulp-cached": "^1.1.1",
    "gulp-csso": "^4.0.1",
    "gulp-dart-sass": "^1.1.0",
    "gulp-html-beautify": "^1.0.1",
    "gulp-htmlmin": "^5.0.1",
    "gulp-if": "^3.0.0",
    "gulp-merge-media-queries": "^0.2.1",
    "gulp-newer": "^1.4.0",
    "gulp-notify": "^5.0.0",
    "gulp-nunjucks-render": "^2.2.3",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^10.0.0",
    "gulp-remember": "^1.0.1",
    "gulp-replace": "^1.1.4",
    "gulp-sass-glob-use-forward": "^0.1.3",
    "gulp-size": "^5.0.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-svg-sprite": "^2.0.3",
    "gulp-terser": "^2.1.0",
    "gulp-webp": "^5.0.0",
    "node-notifier": "^10.0.1",
    "postcss": "^8.5.3",
    "prettier": "^3.8.0",
    "prettier-plugin-jinja-template": "^2.1.0",
    "sass": "^1.83.4",
    "sharp": "^0.33.0",
    "stylelint": "^17.0.0",
    "stylelint-config-standard-scss": "^17.0.0",
    "through2": "^4.0.2"
  }
}
