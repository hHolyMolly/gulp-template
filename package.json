{
  "name": "gulp-template",
  "description": "Modern Gulp template with Tailwind CSS CDN, aliases, and .env configuration",
  "version": "2.0.0",
  "type": "module",
  "main": "gulpfile.js",
  "author": "HolyMolly",
  "license": "ISC",
  "scripts": {
    "start": "cross-env NODE_ENV=development gulp start",
    "build:dev": "cross-env NODE_ENV=development gulp build:dev",
    "build:prod": "cross-env NODE_ENV=production gulp build:prod",
    "tailwind:setup": "node .template/setup/tailwind/setup.js",
    "clean": "rm -rf node_modules dist pnpm-lock.yaml package-lock.json"
  },
  "devDependencies": {
    "browser-sync": "^2.27.11",
    "cross-env": "^10.1.0",
    "del": "^6.1.1",
    "dotenv": "^16.4.7",
    "gulp": "^4.0.2",
    "gulp-clean-css": "^4.3.0",
    "gulp-csso": "^4.0.1",
    "gulp-dart-sass": "^1.1.0",
    "gulp-file-include": "^2.3.0",
    "gulp-htmlmin": "^5.0.1",
    "gulp-if": "^3.0.0",
    "gulp-imagemin": "7.1.0",
    "gulp-merge-media-queries": "^0.2.1",
    "gulp-newer": "^1.4.0",
    "gulp-prettify": "^0.5.0",
    "gulp-replace": "^1.1.4",
    "gulp-svg-sprite": "^2.0.3",
    "gulp-terser": "^2.1.0",
    "sass": "^1.83.4"
  }
}
